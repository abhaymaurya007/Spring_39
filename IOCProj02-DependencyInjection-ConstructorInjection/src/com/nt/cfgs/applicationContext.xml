<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">
                           
        <!-- Configure java classes as spring beans -->
        <bean id="ltime"  class="java.time.LocalTime"  factory-method="now"/>  <!-- Dependent spring bean -->
        <bean id="ldate"  class="java.time.LocalDate"  factory-method="now"/><!-- Dependent spring bean -->
        
        <!-- target spring bean  -->
        <bean id="wmg"  class="com.nt.sbeans.WishMessageGenerator">  <!-- target spring bean -->
             <!-- constructor injection configuration   -->
              <constructor-arg name="time"  ref="ltime"/>
               <constructor-arg name="date"  ref="ldate"/> 
               <property  name="age"  value="50"/>
               <constructor-arg name="age"  value="40"/>
         </bean> 
         
         <bean id="a1"  class="com.nt.sbeans.A">
             <!-- <property name="b"  ref="b1"/> -->
             <constructor-arg name="b"  ref="b1"/>
         </bean>
         
         <bean id="b1"  class="com.nt.sbeans.B">
            <!--  <property name="a"  ref="a1"/>
 -->      <constructor-arg name="a"  ref="a1"/>  
        </bean>
         
                           
  </beans>